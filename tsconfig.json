{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "lib": ["ES2024", "DOM"],
        "baseUrl": ".",
        "outDir": "./view/js",
        "rootDir": ".",
        "paths": {
            "@model/*": ["model/*"],
            "@view/*": ["view/*"],
            "@controller/*": ["controller/*"]
        }
    },
    "include": [
        "controller/**/*",
        "model/**/*"
    ]
}